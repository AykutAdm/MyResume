@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Proje Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PortfolioId</td>
            <td>@item.Title</td>
            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId">Sil</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Girişi</a>

