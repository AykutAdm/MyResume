@model Feature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Page Heading -->
        <div class="flex items-center gap-4">
            <a href="/Feature/FeatureList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Özellik Düzenleme Sayfası</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Özellik bilgilerinizi düzenleyin</p>
            </div>
        </div>

        <!-- Form Container -->
        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="FeatureId" />
                    
                    <!-- Name Surname -->
                    <div>
                        <label for="nameSurname" class="block text-sm font-bold mb-2">
                            Ad Soyad
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="NameSurname"
                               id="nameSurname"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                    </div>

                    <!-- Title -->
                    <div>
                        <label for="title" class="block text-sm font-bold mb-2">
                            Unvan
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="Title"
                               id="title"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                    </div>

                    <!-- Image URL -->
                    <div>
                        <label for="imageUrl" class="block text-sm font-bold mb-2">
                            Profil Resim URL
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="ImageUrl"
                               id="imageUrl"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            Profil resminizin URL adresini girin
                        </p>
                    </div>

                    <!-- Cover Image URL 1 -->
                    <div>
                        <label for="coverImageUrl1" class="block text-sm font-bold mb-2">
                            Kapak Resim 1 URL
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="CoverImageUrl1"
                               id="coverImageUrl1"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            İlk kapak resminizin URL adresini girin
                        </p>
                    </div>

                    <!-- Cover Image URL 2 -->
                    <div>
                        <label for="coverImageUrl2" class="block text-sm font-bold mb-2">
                            Kapak Resim 2 URL
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="CoverImageUrl2"
                               id="coverImageUrl2"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            İkinci kapak resminizin URL adresini girin
                        </p>
                    </div>

                    <!-- Cover Image URL 3 -->
                    <div>
                        <label for="coverImageUrl3" class="block text-sm font-bold mb-2">
                            Kapak Resim 3 URL
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               asp-for="CoverImageUrl3"
                               id="coverImageUrl3"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all" />
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            Üçüncü kapak resminizin URL adresini girin
                        </p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-3 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit"
                                class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                            <span class="material-symbols-outlined text-[20px]">check</span>
                            Kaydet
                        </button>
                        <a href="/Feature/FeatureList/"
                           class="flex items-center gap-2 px-6 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-700 dark:text-slate-300 rounded-lg font-bold text-sm hover:bg-slate-200 dark:hover:bg-[#283539] transition-colors">
                            <span class="material-symbols-outlined text-[20px]">close</span>
                            İptal
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-50 dark:bg-blue-950/20 border border-blue-200 dark:border-blue-900/50 rounded-xl p-6">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-[24px]">info</span>
                <div>
                    <h4 class="font-bold text-blue-900 dark:text-blue-300 mb-1">Bilgilendirme</h4>
                    <p class="text-sm text-blue-800 dark:text-blue-400">
                        Tüm alanlar zorunludur. Özellik bilgilerinizi eksiksiz doldurunuz. Kapak resimleri slider'da kullanılacaktır.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
