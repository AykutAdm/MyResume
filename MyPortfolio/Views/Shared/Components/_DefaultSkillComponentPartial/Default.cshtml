@model List<Skill>

<style>
    .skills-section {
        padding: 60px 0;
        background: #f8f9fa;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 48px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .section-description {
        font-size: 16px;
        color: #666;
        line-height: 1.7;
        margin-bottom: 48px;
        text-align: center;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .skills-timeline {
        position: relative;
        padding-left: 40px;
    }

        .skills-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
        margin-top: 24px;
    }

    .skill-item {
        position: relative;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .skill-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .skill-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .skill-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .skill-title {
        font-size: 20px;
        font-weight: 700;
        color: #1a1a1a;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .skill-title i {
            font-size: 24px;
            color: #6366f1;
        }

    .skill-percentage {
        font-size: 18px;
        font-weight: 700;
        color: #6366f1;
    }

    .skill-progress {
        width: 100%;
        height: 12px;
        background: #e5e7eb;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
    }

    .skill-progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #6366f1, #22d3ee);
        border-radius: 10px;
        transition: width 1s ease-in-out;
        position: relative;
        overflow: hidden;
    }

        .skill-progress-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shimmer 2s infinite;
        }

    @@keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(100%);
        }
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .skills-timeline {
            padding-left: 30px;
        }

        .skill-item::before {
            left: -42px;
        }

        .skills-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section id="skills" class="skills-section">
    <div class="container">
        <h2 class="section-title text-center" style="display: block; width: 100%;">Yeteneklerim</h2>
        <p class="section-description">
            Çalıştığım teknolojiler ve araçlar
        </p>

        <div class="skills-timeline">
            <div class="skills-grid">
                @foreach (var item in Model)
                {
                    <div class="skill-item">
                        <div class="skill-header">
                            <h3 class="skill-title">
                                <i class="ri-code-s-slash-line"></i>
                                @item.Title
                            </h3>
                            <span class="skill-percentage">@item.SkillValue%</span>
                        </div>
                        <div class="skill-progress">
                            <div class="skill-progress-bar" style="width: @item.SkillValue%" role="progressbar" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>