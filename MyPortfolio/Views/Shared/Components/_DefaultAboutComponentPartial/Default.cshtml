@model List<About>

<style>
    .about-section {
        padding: 60px 0;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 48px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .about-timeline {
        position: relative;
        padding-left: 40px;
    }

        .about-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .about-item {
        position: relative;
        margin-bottom: 48px;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .about-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .about-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .about-content {
        display: flex;
        gap: 32px;
        align-items: flex-start;
    }

    .about-image {
        flex-shrink: 0;
        width: 300px;
        height: 400px;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .about-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .about-text {
        flex: 1;
    }

    .about-name {
        font-size: 28px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 8px;
        line-height: 1.3;
    }

    .about-title {
        font-size: 18px;
        font-weight: 600;
        color: #6366f1;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .about-title i {
            font-size: 20px;
        }

    .about-description {
        font-size: 15px;
        color: #666;
        line-height: 1.7;
        margin: 0;
    }

    .about-buttons {
        margin-top: 70px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        border: none;
        color: #fff;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

    .btn-light {
        background: #fff;
        border: 2px solid #6366f1;
        color: #6366f1;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-light:hover {
            background: #6366f1;
            color: #fff;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .about-timeline {
            padding-left: 30px;
        }

        .about-item::before {
            left: -42px;
        }

        .about-content {
            flex-direction: column;
        }

        .about-image {
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }

        .about-name {
            font-size: 24px;
            text-align: center;
        }

        .about-title {
            font-size: 16px;
            justify-content: center;
        }

        .about-description {
            text-align: center;
        }

        .about-buttons {
            justify-content: center;
        }
    }
</style>

<section id="about" class="about-section">
    <div class="container">
        <h2 class="section-title">Hakkımda</h2>

        <div class="about-timeline">
            @foreach (var item in Model)
            {
                <div class="about-item">
                    <div class="about-content">
                        <div class="about-image">
                            <img src="@item.ImageUrl" alt="@item.NameSurname">
                        </div>
                        <div class="about-text">
                            <h3 class="about-name">@item.NameSurname</h3>

                            <div class="about-title">
                                <i class="ri-user-line"></i>
                                @item.Title
                            </div>

                            <p class="about-description">@item.Description</p>

                            <div class="about-buttons">
                                <a href="#" class="btn btn-primary">CV'mi İndirin</a>
                                <a href="#contact" class="btn btn-light scrollto">Bana Yazın</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @await Component.InvokeAsync("_DefaultEducationComponentPartial")
    </div>
</section>