@model List<Service>

<style>
    .services-section {
        padding: 60px 0;
        background: #f8f9fa;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 24px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .section-description {
        font-size: 16px;
        color: #666;
        line-height: 1.7;
        margin-bottom: 48px;
        text-align: center;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .services-timeline {
        position: relative;
        padding-left: 40px;
    }

        .services-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
        margin-top: 24px;
    }

    .service-item {
        position: relative;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .service-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .service-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .service-icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(34, 211, 238, 0.1));
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 32px;
        color: #6366f1;
    }

    .service-title {
        font-size: 22px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .service-description {
        font-size: 15px;
        color: #666;
        line-height: 1.7;
        margin: 0;
        flex: 1;
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .services-timeline {
            padding-left: 30px;
        }

        .service-item::before {
            left: -42px;
        }

        .services-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section id="services" class="services-section">
    <div class="container">
        <h2 class="section-title text-center" style="display: block; width: 100%;">Hizmetlerim</h2>
        <p class="section-description">
            Modern yazılım mimarileri ve güncel teknolojilerle, ölçeklenebilir ve sürdürülebilir çözümler geliştiriyorum.
            Backend ağırlıklı projelerde; performans, güvenlik ve temiz kod prensiplerini merkeze alarak uçtan uca yazılım süreçlerini yönetiyorum.
        </p>

        <div class="services-timeline">
            <div class="services-grid">
                @foreach (var item in Model)
                {
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="@item.IconUrl"></i>
                        </div>
                        <h3 class="service-title">@item.Title</h3>
                        <p class="service-description">@item.Description</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>