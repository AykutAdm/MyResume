@model List<Education>

<style>
    .education-section {
        padding: 60px 0;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 48px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .education-timeline {
        position: relative;
        padding-left: 40px;
    }

        .education-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .education-item {
        position: relative;
        margin-bottom: 48px;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .education-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .education-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .education-date {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(34, 211, 238, 0.1));
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        color: #6366f1;
        margin-bottom: 16px;
    }

        .education-date i {
            font-size: 16px;
        }

    .education-title {
        font-size: 24px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 8px;
        line-height: 1.3;
    }

    .education-university {
        font-size: 18px;
        font-weight: 600;
        color: #6366f1;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .education-university i {
            font-size: 20px;
        }

    .education-description {
        font-size: 15px;
        color: #666;
        line-height: 1.7;
        margin: 0;
    }

    .education-gpa {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 6px;
        font-size: 13px;
        font-weight: 600;
        color: #1e40af;
        margin-top: 12px;
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .education-timeline {
            padding-left: 30px;
        }

        .education-item::before {
            left: -42px;
        }

        .education-title {
            font-size: 20px;
        }

        .education-university {
            font-size: 16px;
        }
    }
</style>

<div class="education-section">
    <div class="container">
        <h2 class="section-title">Education</h2>

        <div class="education-timeline">
            @foreach (var item in Model)
            {
                <div class="education-item">
                    <div class="education-date">
                        <i class="ri-calendar-line"></i>
                        @item.EducationDate.ToString("dd MMM yyyy")
                    </div>

                    <h3 class="education-title">@item.Title</h3>

                    <div class="education-university">
                        <i class="ri-building-line"></i>
                        @item.Subtitle
                    </div>

                    <span class="education-gpa">
                        <i class="ri-trophy-line"></i>
                        @item.Description
                    </span>

                </div>
            }
        </div>
    </div>
</div>




