@model List<Testimonial>

<style>
    .testimonial-section {
        padding: 60px 0;
        background: #f8f9fa;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 48px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .testimonial-timeline {
        position: relative;
        padding-left: 40px;
    }

        .testimonial-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .testimonial-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 24px;
        margin-top: 24px;
    }

    .testimonial-item {
        position: relative;
        margin-bottom: 48px;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .testimonial-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .testimonial-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .testimonial-quote {
        font-size: 48px;
        color: #6366f1;
        opacity: 0.2;
        margin-bottom: 20px;
        line-height: 1;
    }

    .testimonial-comment {
        font-size: 16px;
        color: #666;
        line-height: 1.7;
        margin-bottom: 24px;
        font-style: italic;
        position: relative;
    }

    .testimonial-author {
        display: flex;
        align-items: center;
        gap: 16px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .testimonial-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        overflow: hidden;
        flex-shrink: 0;
        border: 3px solid #6366f1;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
    }

        .testimonial-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .testimonial-info {
        flex: 1;
    }

    .testimonial-name {
        font-size: 18px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 4px;
    }

    .testimonial-title {
        font-size: 14px;
        color: #6366f1;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .testimonial-timeline {
            padding-left: 30px;
        }

        .testimonial-item::before {
            left: -42px;
        }

        .testimonial-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section id="testimonials" class="testimonial-section">
    <div class="container">
        <h2 class="section-title text-center" style="display: block; width: 100%;">Referanslarım</h2>

        <div class="testimonial-timeline">
            <div class="testimonial-grid">
                @foreach (var item in Model)
                {
                    <div class="testimonial-item">
                        <div class="testimonial-quote">
                            <i class="ri-double-quotes-l"></i>
                        </div>
                        <p class="testimonial-comment">@item.CommentDetail</p>
                        <div class="testimonial-author">
                            <div class="testimonial-avatar">
                                <img src="@item.ImageUrl" alt="@item.NameSurname">
                            </div>
                            <div class="testimonial-info">
                                <h4 class="testimonial-name">@item.NameSurname</h4>
                                <p class="testimonial-title">@item.WorkTitle</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>