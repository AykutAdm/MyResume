@model List<Contact>

<style>
    .contact-section {
        padding: 60px 0;
        background: #f8f9fa;
    }

    .section-title {
        font-size: 42px;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 24px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 2px;
        }

    .section-description {
        font-size: 16px;
        color: #666;
        line-height: 1.7;
        margin-bottom: 48px;
        text-align: center;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .contact-timeline {
        position: relative;
        padding-left: 40px;
    }

        .contact-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #6366f1, #22d3ee);
        }

    .contact-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 48px;
    }

    .contact-info-item {
        position: relative;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
        text-align: center;
    }

        .contact-info-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .contact-info-item::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .contact-icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(34, 211, 238, 0.1));
        border-radius: 12px;
        margin: 0 auto 20px;
        font-size: 32px;
        color: #6366f1;
    }

    .contact-info-text {
        font-size: 16px;
        color: #666;
        line-height: 1.6;
        margin: 0;
    }

        .contact-info-text a {
            color: #6366f1;
            text-decoration: none;
            font-weight: 600;
        }

            .contact-info-text a:hover {
                text-decoration: underline;
            }

    .contact-form-card {
        position: relative;
        padding: 32px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .contact-form-card:hover {
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.15);
        }

        .contact-form-card::before {
            content: '';
            position: absolute;
            left: -52px;
            top: 40px;
            width: 16px;
            height: 16px;
            background: linear-gradient(135deg, #6366f1, #22d3ee);
            border-radius: 50%;
            border: 4px solid #fff;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .form-control {
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            outline: none;
        }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        border: none;
        color: #fff;
        padding: 12px 32px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 32px;
        }

        .contact-timeline {
            padding-left: 30px;
        }

        .contact-info-item::before,
        .contact-form-card::before {
            left: -42px;
        }

        .contact-info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section id="contact" class="contact-section">
    <div class="container">
        @foreach (var item in Model)
        {
            <h2 class="section-title text-center" style="display: block; width: 100%;">İletişim</h2>
            <p class="section-description">@item.Description</p>

            <div class="contact-timeline">
                <div class="contact-info-grid">
                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="ti-mobile"></i>
                        </div>
                        <p class="contact-info-text">@item.PhoneNumber</p>
                    </div>

                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="ti-location-pin"></i>
                        </div>
                        <p class="contact-info-text">@item.Address</p>
                    </div>

                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="ti-email"></i>
                        </div>
                        <p class="contact-info-text">
                            <a href="@item.Email">@item.Email</a>
                        </p>
                    </div>
                </div>

                <div class="contact-form-card">
                    @await Html.PartialAsync("~/Views/Contact/SendMessage.cshtml", new Message())
                </div>
            </div>
        }
    </div>
</section>