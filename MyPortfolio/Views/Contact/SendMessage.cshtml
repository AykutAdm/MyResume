@model Message

<div class="message-form">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4" style="padding: 12px 16px; border-radius: 8px; background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.2); color: #16a34a;">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mb-4" style="padding: 12px 16px; border-radius: 8px; background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #dc2626;">
            @TempData["ErrorMessage"]
        </div>
    }

    <form id="contact-form" asp-action="SendMessage" asp-controller="Contact" method="post" autocomplete="off">
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <div class="form-group">
                    <input type="text" id="cf-name" asp-for="NameSurname" placeholder="Adınız Soyadınız" class="form-control" required>
                </div>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <div class="form-group">
                    <input type="email" id="cf-email" asp-for="EmailAddress" placeholder="E-posta Adresiniz" class="form-control" required>
                </div>
            </div>

            <div class="col-12 mb-3">
                <div class="form-group">
                    <input type="text" id="cf-subject" asp-for="Subject" placeholder="Konu (Opsiyonel)" class="form-control">
                </div>
            </div>

            <div class="col-12 mb-4">
                <div class="form-group">
                    <textarea asp-for="MessageDetail" id="cf-message" placeholder="Mesajınız" class="form-control" rows="7" required></textarea>
                </div>
            </div>

            <div class="col-12 text-center">
                <button class="btn btn-primary" type="submit">Mesajı Gönder</button>
            </div>
        </div>
    </form>
</div>