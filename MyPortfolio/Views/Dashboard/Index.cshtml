@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-7xl mx-auto space-y-8">
        <!-- Page Heading -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
            <div>
                <h3 class="text-3xl font-black tracking-tight">Dashboard</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Portfolio yönetim paneli genel bakış</p>
            </div>
            <div class="text-sm text-slate-500 dark:text-[#9db2b9]">
                @DateTime.Now.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))
            </div>
        </div>

        <!-- Statistics Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Toplam Mesaj -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Mesaj</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalMessage</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">mail</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Message/MessageList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Okunmamış Mesaj -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Okunmamış Mesaj</p>
                        <p class="text-3xl font-black text-red-500">@ViewBag.UnreadMessage</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-red-500/10 dark:bg-red-500/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-red-500 text-[32px]">mark_email_unread</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Message/MessageList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Okunmuş Mesaj -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Okunmuş Mesaj</p>
                        <p class="text-3xl font-black text-green-500">@ViewBag.ReadMessage</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-green-500/10 dark:bg-green-500/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-500 text-[32px]">drafts</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Message/MessageList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Toplam Proje -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Proje</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalPortfolio</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">folder</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Portfolio/PortfolioList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>
        </div>

        <!-- Additional Statistics Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Toplam Hizmet -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Hizmet</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalService</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">room_service</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Service/ServiceList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Toplam Yetenek -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Yetenek</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalSkill</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">psychology</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Skill/SkillList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Toplam Deneyim -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Deneyim</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalExperience</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">work</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Experience/ExperienceList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>

            <!-- Toplam Referans -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-[#9db2b9] mb-1">Toplam Referans</p>
                        <p class="text-3xl font-black text-slate-900 dark:text-white">@ViewBag.TotalTestimonial</p>
                    </div>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[32px]">verified</span>
                    </div>
                </div>
                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                    <a href="/Testimonial/TestimonialList/" class="text-sm text-primary hover:underline font-medium">Tümünü Gör →</a>
                </div>
            </div>
        </div>

        <!-- Quick Actions & Recent Activity -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Quick Actions -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm">
                <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Hızlı İşlemler</h4>
                <div class="grid grid-cols-2 gap-3">
                    <a href="/Portfolio/CreatePortfolio/" class="flex items-center gap-3 p-4 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                        <span class="material-symbols-outlined text-primary text-[24px]">add</span>
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Yeni Proje</span>
                    </a>
                    <a href="/Service/CreateService/" class="flex items-center gap-3 p-4 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                        <span class="material-symbols-outlined text-primary text-[24px]">add</span>
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Yeni Hizmet</span>
                    </a>
                    <a href="/Experience/CreateExperience/" class="flex items-center gap-3 p-4 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                        <span class="material-symbols-outlined text-primary text-[24px]">add</span>
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Yeni Deneyim</span>
                    </a>
                    <a href="/Skill/CreateSkill/" class="flex items-center gap-3 p-4 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                        <span class="material-symbols-outlined text-primary text-[24px]">add</span>
                        <span class="text-sm font-medium text-slate-900 dark:text-white">Yeni Yetenek</span>
                    </a>
                </div>
            </div>

            <!-- System Info -->
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-6 shadow-sm">
                <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Sistem Bilgileri</h4>
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-500 dark:text-[#9db2b9]">Toplam Kategori</span>
                        <span class="text-sm font-bold text-slate-900 dark:text-white">@ViewBag.TotalCategory</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-500 dark:text-[#9db2b9]">Toplam Eğitim</span>
                        <span class="text-sm font-bold text-slate-900 dark:text-white">@ViewBag.TotalEducation</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-500 dark:text-[#9db2b9]">Öne Çıkan</span>
                        <span class="text-sm font-bold text-slate-900 dark:text-white">@ViewBag.TotalFeature</span>
                    </div>
                    <div class="pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-slate-500 dark:text-[#9db2b9]">Son Mesaj Gönderen</span>
                            <span class="text-sm font-bold text-primary">@ViewBag.LastMessageSender</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
